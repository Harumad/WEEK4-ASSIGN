class Human{
  constructor(name,age){
    this.name= name
    this.age= age
   
  }

  talk(){
    console.log(`${this.name} speaks `)
   
  }
  
}
class Man extends Human {

}



const person1 =new Human('Haruna Mohammed',30, 'Tuba')
person1.talk();

const man1 = new Man(`Haruna Mohammed`,30)
man1.talk();

